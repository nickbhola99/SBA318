doctype html 
html 
    head 
        title="To Do List"
        style.
            body{
                background-color: beige;
                text-align: center;
                padding: 2rem;
                display: block;
                margin: 0 auto;
                font-size: xx-large;
            }
            a{
            }
            input{
                background-color: bisque;
                width: 15%;
                height: 45px;
                margin-bottom: 20px;
                align-items: center;
                font-size: large;
                margin-right: 2rem;
            }
            button{
                cursor: text;
                border-radius: 12px;
                padding-left: 20px;
                width: 5%;
                height: 45px;
            }
            a{
                border: 2px solid black;
                text-decoration: none;
                background-color: bisque;
            }
    body 
        h1 To Do List 
        h2 Log In
        form(action=`/`, method='POST')
            input(type='text', name='username', placeholder='Username', required)
            button(type='submit', value="Submit" ) Sign In
        a(href='/signup') Sign Up
